public static int deleteStudent(){
        System.out.println("Enter the id of the student: ");
        int id = scanner.nextInt();

        try{
            ps = getConnection().prepareStatement("DELETE FROM student_info WHERE id=" + id);
            ps.execute();
            System.out.println("Student card deleted successfully");
        } catch (SQLException e){
            e.printStackTrace();
        }return id;
    }
